
<%= render "home/navbar" %>
<div class="container-fluid d-flex ">
    <% @movies.each do |movie| %>
        <div class="card mx-3 my-2" style="width: 18rem;">
             <% if movie.image.attached? %>
                <%= image_tag movie.image, style:"width: 200px;height: 180px; display: block",class: "card-img-top mx-2" %>
            <% end %>
            <div class="card-body">
                <h5 class="card-title" ><%= movie.title  %></h5>
                <p class="card-text"> <%= movie.duration %></p>
                <%= link_to "More", movie_path(movie), class: "btn btn-primary" %>
                <%= link_to "Add to cart", add_order_path(movie), class: "btn btn-primary" %>
            </div>
        </div>
    <% end %>
</div>

