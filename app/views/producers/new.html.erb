<%= form_with model: @producer do |producer| %>
    <div class=" col-sm-3 mb-3 mt-3">
      <%= producer.label :query, "Full name:" %>
      <%= producer.text_field :name ,:class => "form-control form-control-lg", :required => true %>
    </div>
    <div class="col-sm-3 mb-3">
      <%= producer.label :query, "Bio:",:class => "px-3" %>
      <%= producer.text_area :bio,:class => "form-control form-control-sm ",:required => true %>
    </div>
      <%= producer.label :query, "Image:",:class => "px-3" %>
      <%= producer.file_field :image ,:class => "form-control form-control-sm " %>
    </div>
    <%= producer.button :submit , :class=>"btn btn-primary py-2"%>
<% end %>
