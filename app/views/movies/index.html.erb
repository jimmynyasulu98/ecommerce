<h1>Movies</h1>

<% @movies.each do |movie| %>
    <h3> <%= movie.title %> </h3>
    <h5> <%= movie.duration %> </h5>

    <% if movie.image.attached? %>
        <%= image_tag movie.image, style: "width: 200px; display: block" %>
    <% end %>

    <%= link_to "new movie" , new_movie_path(), class: "btn btn-default" %>
<% end %>

