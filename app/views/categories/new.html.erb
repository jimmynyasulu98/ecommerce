<div class="container"  >
  <%= form_with model: @category do |form| %>
    <div >
      <div class=" col-sm-3 mb-3 mt-3">
        <%= form.label :query, "Name" %>
        <%= form.text_field :name ,:class => "form-control form-control-sm", :required => true %>
      </div>
       <div>
         <%= form.button :submit , :class=>"btn btn-primary py-2"%>
          <%= link_to "Main menu", root_path() , :class=>"btn btn-primary py-2"%>
      </div>
    </div>
  <% end %>
</div>
