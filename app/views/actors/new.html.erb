

<div class="container"  >
  <%= form_with model: @actor do |form| %>
  <div >
        <div class=" col-sm-3 mb-3 mt-3">
            <%= form.label :query, "Full name:" %>
            <%= form.text_field :name ,:class => "form-control form-control-lg", :required => true %>
        </div>
        <div class="col-sm-3 mb-3">
            <%= form.label :query, "Bio:"%>
            <%= form.text_area :bio,:class => "form-control form-control-sm ",:required => true %>
        </div>
        <div class=" col-sm-3 mb-3 mt-3">
            <%= form.label :query, "Image:"%>
            <%= form.file_field :image ,:class => "form-control form-control-sm " %>
        </div>

        <div>
            <%= form.button :submit , :class=>"btn btn-primary py-2"%>
            <%= link_to "Main menu", root_path() , :class=>"btn btn-primary py-2"%>
        </div>

    </div>
  <% end %>
</div>
